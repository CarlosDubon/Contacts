<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center">
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/contact_image_dialog"
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:src="@drawable/profile"
                android:scaleType="centerCrop"
                />
            <TextView
                android:id="@+id/text_edit_dilog"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_edit_black_24dp"
                android:drawableTint="@android:color/white"
                android:layout_alignParentRight="true"
                android:padding="8dp"
                />
            <TextView
                android:id="@+id/text_name_dialog"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/text_generic_name"
                android:textSize="24sp"
                android:textColor="@android:color/white"
                android:layout_alignBottom="@id/contact_image_dialog"
                android:padding="8dp"

                />
        </RelativeLayout>
        <LinearLayout
            android:id="@+id/info_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp">
            <TextView
                android:layout_weight="2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_phone_black_24dp"/>
            <TextView
                android:layout_weight="10"
                android:id="@+id/text_number_dialog"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="7777-7777"
                android:textSize="16sp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp">
            <TextView
                android:layout_weight="2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_event_black_24dp"/>
            <TextView
                android:layout_weight="10"
                android:id="@+id/text_birth_dialog"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="00-00-00"
                android:textSize="16sp"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp"
            android:layout_marginBottom="16dp">
            <TextView
                android:layout_weight="2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_email_black_24dp"/>
            <TextView
                android:layout_weight="10"
                android:id="@+id/text_email_dialog"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/text_generic_email"
                android:textSize="16sp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <TextView
                android:id="@+id/text_call"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="4dp"
                android:textColor="@color/colorPrimary"
                android:textSize="18sp"
                android:drawableTop="@drawable/ic_phone_forwarded_black_24dp"
                android:textAlignment="center"
                android:drawableTint="@color/colorPrimary"
                />
            <TextView
                android:id="@+id/text_share"
                android:padding="4dp"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:drawableTint="@color/colorPrimary"
                android:drawableTop="@drawable/ic_share_black_24dp"/>
        </LinearLayout>
    </LinearLayout>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/btn_fav"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/buttonFloatPink"
        app:borderWidth="0dp"
        android:src="@drawable/ic_favorite_black_18dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="8dp"
        android:layout_marginTop="106dp"
        android:scaleType="center"
        app:fabSize="mini"
        />
</RelativeLayout>